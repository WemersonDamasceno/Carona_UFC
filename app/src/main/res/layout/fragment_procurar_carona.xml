<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ui.ProcurarCaronaFragment">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFundoCardView"
        android:orientation="vertical"
        tools:context=".views.ProcurarCaronaActivity">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorLilasStart"
                app:tabTextColor="@color/colorBranco">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caronas GrÃ¡tis" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/suas_musicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caronas Pagas" />

            </com.google.android.material.tabs.TabLayout>


        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>
</FrameLayout>